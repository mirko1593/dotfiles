alias nah="git reset --hard && git clean -df"
alias wip="git add . && git commit -m 'WIP.'"
alias glo="git log --oneline"
alias gs="git status"
alias gcm="git commit -m "
alias gca="git commit --amend"
alias gcb="git checkout -b"
alias gbd="git branch -d"
alias gbD="git branch -D"
alias gck="git checkout"
alias gcd="git checkout dev"
alias gpo="git push origin"
alias gpl="git pull"

# tmux
alias tls="tmux list-sessions"
alias tts="tmux attach-session -t"

# kubernetes
alias k="kubectl"
alias ka="kubectl get all"
alias kaf="kubectl apply -f"
alias kan="kubectl get all -n"
alias kd="kubectl delete"
alias kdf="kubectl delete -f"
alias kn="kubectl get ns"
alias kg="kubectl get"
alias kap="kubectl get pods"
alias kas="kubectl get services"
alias kad="kubectl get deployments"
alias wap="watch kubectl get pods"
